#################################################
# --> Windows
#################################################
# title format
for_window [class="^.*"] title_format "<b>%class</b>"

# enable window icons for all windows
for_window [all] title_window_icon on
for_window [all] title_window_icon padding 6px

# remove title bar
default_border pixel 0
for_window [class="^.*"] border pixel 0
for_window [window_type="normal"] border pixel 1
for_window [window_type="dialog"] border pixel 1

#################################################
# --> Application specific config
#################################################
# title format for kitty terminal
for_window [class="kitty"] title_format "<b>%class | %title</b>"

# make MATLAB figures float and center positioned
for_window [class="MATLAB*" title="Figure*"] floating enable
for_window [class="MATLAB*" title="Figure*"] move position center

#################################################
# --> Keybindings
#################################################
# use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# kill focused window
bindsym $mod+Shift+q kill

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space  floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
# bindsym $mod+a focus parent

# focus the child container
# bindsym $mod+d focus child

# split in (h)orizontal or (v)ertical orientation
bindsym $mod+$alt+h split h; exec --no-startup-id dunstify -a "I3" "Split horizontal"
bindsym $mod+$alt+v split v; exec --no-startup-id dunstify -a "I3" "Split vertical"

# resize Windows
bindsym $mod+minus        resize shrink width 10 px or 10 ppt
bindsym $mod+Shift+minus  resize shrink height 10 px or 10 ppt
bindsym $mod+Shift+equal  resize grow height 10 px or 10 ppt
bindsym $mod+equal        resize grow width 10 px or 10 ppt

# change focus
bindsym $mod+h            focus left
bindsym $mod+j            focus down
bindsym $mod+l            focus right
bindsym $mod+k            focus up
# -
bindsym $mod+Left         focus left
bindsym $mod+Down         focus down
bindsym $mod+Up           focus up
bindsym $mod+Right        focus right

# move focused window
bindsym $mod+Shift+h      move left
bindsym $mod+Shift+j      move down
bindsym $mod+Shift+k      move up
bindsym $mod+Shift+l      move right
# -
bindsym $mod+Shift+Left   move left
bindsym $mod+Shift+Down   move down
bindsym $mod+Shift+Up     move up
bindsym $mod+Shift+Right  move right

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s            layout stacking
bindsym $mod+w            layout tabbed
bindsym $mod+t            layout toggle split

