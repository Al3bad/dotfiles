if command -v nvim &> /dev/null
then
    export EDITOR=nvim
else
    export EDITOR=vim
fi

export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH" # GNU commands
export PATH=~/.local/bin:$PATH                              # ptSh & any tool installed in this dir
export PATH=${PATH}:/usr/local/mysql/bin/                   # MySQL

export NVM_DIR="$HOME/.nvm"     # NVM - NodeJS version manager

# Export icons for "lf" file manager
LF_ICONS_PATH="$HOME/.config/lf/icons"
[ -f $LF_ICONS_PATH ] && source $LF_ICONS_PATH

