# Should you change your keyboard layout some time, delete
# this file and re-run i3-config-wizard(1).
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

#################################################
# --> Color Scheme
#################################################
set $dark               #282c34
set $grey-light         #abb1bf
set $grey               #6a7280
set $grey-dark          #3c454e
set $red                #e26a72
set $green              #6ac389
set $blue               #5d9bcf
set $white              #ebeaff
set $cyan               #51b5c3

set $bg-color           #3c5f7d
set $bg-color-dark      #22394d
set $bg-color-indicator #4d7aa1
set $bg-color-inactive  #2f343f
set $bg-color-urgent    #51b5c3

set $fg-color           #abb1bf
set $fg-color-inactive  #6a7280

#################################################
# --> General env variables
#################################################
# Mod4 is the Windows key on keyboard
set $mod Mod4
set $alt Mod1
set $term kitty

#################################################
# --> General config
#################################################
# Useless Gaps
gaps inner 20

# font pango:monospace 10
# font pango:DejaVu Sans Mono 8
font pango:FiraCode Nerd Font 10

#################################################
# --> Include i3 config
#################################################
include $HOME/.config/i3/i3-workspaces
include $HOME/.config/i3/i3-windows
include $HOME/.config/i3/i3-theme
# include $HOME/.config/i3/i3-statusbar
exec_always --no-startup-id $HOME/.config/polybar/launch.sh mybar

#################################################
# --> Autostart Applications/Scripts
#################################################
# DPI settings
exec_always --no-startup-id xrandr --dpi 144

# Start the compositer
exec_always --no-startup-id picom

# Set the background
exec_always --no-startup-id feh --bg-scale $HOME/Pictures/wallpapers/img-1.jpg

# Faster key repeat and delay
exec_always xset r rate 310 40

# Keyboard remap script
exec_always --no-startup-id xmodmap ~/.Xmodmap

# Set volume limit 100% and its inital lvl to 0
exec --no-startup-id pamixer --set-limit 100 && pamixer --set-volume 0 && pkill -RTMIN+10 i3blocks

# Sync Onedrive
exec --no-startup-id "~/.config/i3/scripts/onedrive.sh"

#################################################
# --> Daemons / Applets
#################################################
# XFCE settings daemon
exec --no-startup-id xfsettingsd &

# Autostart apps daemon
# to preview the autostart apps, run: `dex -ad`
exec --no-startup-id dex --autostart --environment i3

# Lockscreen daemon
exec --no-startup-id xss-lock --transfer-sleep-lock -- $HOME/.config/i3/scripts/i3lock-pix.sh --nofork

# Notification daemon
exec_always --no-startup-id "killall -q dunst; dunst"

# Autotiling daemon
exec_always --no-startup-id "killall -q autotiling; autotiling -w 1 2 3"

# Start battery monitoring tool
# exec_always --no-startup-id "killall -q cbatticon; cbatticon -i notification --critical-level 4 --command-critical-level 'systemctl suspend'"

# Thunar filr explorer daemon
exec_always --no-startup-id Thunar --daemon

# Auto-mount daemon
exec_always --no-startup-id "killall -q udiskie; udiskie"

#################################################
# --> Key bindings
#################################################
# Reload i3 config
bindsym $mod+Shift+c reload
# Restart i3
bindsym $mod+Shift+r restart
# Exit i3 (logs you out of your X session)
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
# Lock screen
bindsym $mod+$alt+l exec --no-startup-id "~/.config/i3/scripts/i3lock-pix.sh"

# Show/hide all notifications
bindsym $mod+n exec --no-startup-id $HOME/.config/dunst/scripts/show-history.sh 5
bindsym $mod+shift+n exec --no-startup-id dunstctl close-all

# default terminal emulator
bindsym $mod+Return exec $term
# bindsym $mod+Shift+Return exec  $term --directory $(xcwd)

# center and resize focused floating window
bindsym $mod+z exec i3-msg "resize set 1500px 1200px" && i3-msg "move position center"

# Lancher/Window switcher - rofi
# bindsym --release $mod+r exec --no-startup-id "rofi -show combi drun,scripts,power -show-icons"
bindsym --release $mod+r exec --no-startup-id "rofi -show combi -show-icons -font 'FiraCode Nerd Font 12'"
bindsym --release $mod+Tab exec --no-startup-id "rofi -show window -config '~/.config/rofi/config-window-switcher.rasi' -kb-row-down 'Alt-Tab,Super+Tab' -kb-row-up 'Alt+ISO_Left_Tab,Super+ISO_Left_Tab' -kb-cancel 'Alt+Escape,Super+Escape,Escape' -kb-accept-entry '!Alt-Tab,Return,!Super+Tab'&"
bindsym --release $alt+Tab exec --no-startup-id "rofi -show window -config '~/.config/rofi/config-window-switcher.rasi' -kb-row-down 'Alt-Tab,Super+Tab' -kb-row-up 'Alt+ISO_Left_Tab,Super+ISO_Left_Tab' -kb-cancel 'Alt+Escape,Super+Escape,Escape' -kb-accept-entry '!Alt-Tab,Return,!Super+Tab'&"
bindsym --release $mod+$alt+space exec --no-startup-id rofimoji

# Backlight constrol - xbacklight
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 5 && $HOME/.config/dunst/scripts/backlight.sh
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 5 && $HOME/.config/dunst/scripts/backlight.sh

# Volume control - pamixer
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer --increase 6  && pkill -RTMIN+10 i3blocks && $HOME/.config/dunst/scripts/volume.sh
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer --decrease 5  && pkill -RTMIN+10 i3blocks && $HOME/.config/dunst/scripts/volume.sh
bindsym XF86AudioMute        exec --no-startup-id pamixer --toggle-mute && pkill -RTMIN+10 i3blocks && $HOME/.config/dunst/scripts/volume.sh
bindsym XF86AudioMicMute     exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && pkill -RTMIN+10 i3blocks

# Screenshot - flameshot
bindsym --release $mod+Shift+s exec --no-startup-id flameshot gui

# Scratchpad applications
bindsym $mod+c exec --no-startup-id "i3run --class calculator --summon -- kitty --class calculator qalc"
bindsym $mod+x exec --no-startup-id "i3run --class my_terminal --summon -- kitty --class my_terminal"

#################################################
# --> Scratchpad
#################################################
# Calculator
for_window [class="calculator"] floating enable
for_window [class="calculator"] resize set 1200 1000
for_window [class="calculator"] move position center

# Terminal
set $terminal_class "my_terminal"
for_window [class=$terminal_class] floating enable
for_window [class=$terminal_class] resize set 1800 1200
for_window [class=$terminal_class] move position center
